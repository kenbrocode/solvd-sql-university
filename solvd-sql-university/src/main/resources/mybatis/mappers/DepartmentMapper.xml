<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.path.to.your.DepartmentDAO">

    <resultMap id="departmentResultMap" type="com.example.path.to.your.Department">
        <id property="id" column="department_id"/>
        <result property="name" column="department_name"/>
        <!-- Assuming you have a One-to-Many relationship with specialties -->
        <collection property="specialities" ofType="com.example.path.to.your.Specialty" column="department_id" select="getSpecialitiesByDepartment"/>
    </resultMap>

    <select id="getById" resultMap="departmentResultMap">
        SELECT id AS department_id, name AS department_name
        FROM departments
        WHERE id = #{id}
    </select>

    <select id="getAll" resultMap="departmentResultMap">
        SELECT id AS department_id, name AS department_name
        FROM departments
    </select>

    <insert id="create" parameterType="com.example.path.to.your.Department">
        INSERT INTO departments (name) VALUES (#{name})
    </insert>

    <update id="update" parameterType="com.example.path.to.your.Department">
        UPDATE departments SET name = #{name} WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM departments WHERE id = #{id}
    </delete>

    <select id="getSpecialitiesByDepartment" resultMap="com.example.path.to.your.Specialty.specialtyResultMap">
        SELECT id AS specialty_id, name AS specialty_name
        FROM specialities
        WHERE department_id = #{department_id}
    </select>

</mapper>