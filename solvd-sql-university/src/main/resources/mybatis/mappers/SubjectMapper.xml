<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.path.to.your.SubjectDAO">

    <resultMap id="subjectResultMap" type="com.example.path.to.your.Subject">
        <id property="id" column="subject_id"/>
        <result property="name" column="subject_name"/>
        <!-- Assuming you have a One-to-Many relationship with classes -->
        <collection property="classes" ofType="com.example.path.to.your.Class" column="subject_id" select="getClassesBySubject"/>
        <!-- Assuming you have a One-to-Many relationship with exams -->
        <collection property="exams" ofType="com.example.path.to.your.Exam" column="subject_id" select="getExamsBySubject"/>
    </resultMap>

    <select id="getById" resultMap="subjectResultMap">
        SELECT id AS subject_id, name AS subject_name
        FROM subjects
        WHERE id = #{id}
    </select>

    <select id="getAll" resultMap="subjectResultMap">
        SELECT id AS subject_id, name AS subject_name
        FROM subjects
    </select>

    <insert id="create" parameterType="com.example.path.to.your.Subject">
        INSERT INTO subjects (name) VALUES (#{name})
    </insert>

    <update id="update" parameterType="com.example.path.to.your.Subject">
        UPDATE subjects SET name = #{name} WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM subjects WHERE id = #{id}
    </delete>

    <select id="getClassesBySubject" resultMap="com.example.path.to.your.Class.classResultMap">
        SELECT id AS class_id, name AS class_name
        FROM classes
        WHERE subject_id = #{subject_id}
    </select>

    <select id="getExamsBySubject" resultMap="com.example.path.to.your.Exam.examResultMap">
        SELECT id AS exam_id, name AS exam_name
        FROM exams
        WHERE subject_id = #{subject_id}
    </select>

</mapper>